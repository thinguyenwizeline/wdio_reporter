{
  "name": "fusion-project-template",
  "version": "1.0.0",
  "description": "This is a ARC fusion template repo, which contains everything to boost your Fusion app at startup.",
  "main": "index.js",
  "engines": {
    "node": ">=8.14.0",
    "npm": ">=6.4.1"
  },
  "scripts": {
    "fusion": "fusion",
    "start": "fusion start",
    "lint": "eslint . -c .eslintrc --ext js,jsx",
    "clean": "npx @arc-fusion/cli clean",
    "test": "jest --no-cache --maxWorkers=2"
  },

  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@arc-fusion/prop-types": "^0.1.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.27",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-fontawesome": "^1.6.1",
    "styled-components": "^4.3.2",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@arc-fusion/cli": "^1.0.8",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "eslint": "^6.3.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-canvas-mock": "^2.1.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react-dom": "^16.9.0",
    "react-test-renderer": "^16.9.0"
  },
  "jest": {
    "rootDir": ".",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/mocks/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "\\.container$": "<rootDir>/mocks/ContainerMock.jsx",
      "^fusion:(.*)$": "<rootDir>/mocks/fileMock.js"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/.fusion/",
      "<rootDir>/node_modules/"
    ],
    "setupFiles": [
      "jest-canvas-mock"
    ]
  }
}
